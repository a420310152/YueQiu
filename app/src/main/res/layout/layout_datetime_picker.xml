<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_hr"
        android:background="@color/gray"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <TextView
        android:id="@+id/tv_title"
        android:text="请选择时间"
        android:textStyle="italic"
        android:paddingLeft="10dp"
        android:layout_below="@id/tv_hr"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_finish"
        android:text="完成"
        android:textSize="18dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlay_year"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/np_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="年"
                android:paddingRight="2dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/np_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlay_month"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/np_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="月"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/np_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlay_day"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/np_day"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="日"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/np_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlay_hour"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/np_hour"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="时"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/np_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlay_minute"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/np_minute"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="分"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/np_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlay_second"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <NumberPicker
                android:id="@+id/np_second"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="秒"
                android:paddingRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/np_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
