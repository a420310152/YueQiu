<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_challenge">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题约战类型"
        android:textColor="@color/darkmagenta"
        />
    <TextView
        android:id="@+id/tv_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发起人："
        android:layout_below="@id/tv_title"
       />
    <TextView
        android:id="@+id/tv_setName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户1"
        android:layout_alignTop="@id/tv_publisher"
        android:layout_toRightOf="@id/tv_publisher"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        android:layout_below="@id/tv_publisher"
        />
    <TextView
        android:id="@+id/tv_setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04-19 00:00"
        android:layout_alignTop="@id/tv_time"
        android:layout_toRightOf="@id/tv_time"/>
    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点："
        android:layout_below="@id/tv_publisher"
        android:layout_toRightOf="@id/tv_time"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:id="@+id/tv_setPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某某篮球场"
        android:layout_alignTop="@id/tv_time"
        android:layout_toRightOf="@id/tv_place"
        />
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户说话内容"
        android:layout_below="@id/tv_time"
        />

</RelativeLayout>