<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_launcher"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/challengeContent"
        android:layout_alignBottom="@+id/challengeContent"
        android:layout_centerVertical="true"
        />
    <RelativeLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head"
        android:id="@+id/challengeContent">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题约战类型"
            android:textColor="@color/darkred"
            />
        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起人："
            android:layout_below="@id/tv_title"
            />
        <TextView
            android:id="@+id/tv_setName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_alignTop="@id/tv_publisher"
            android:layout_toRightOf="@id/tv_publisher"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:layout_below="@id/tv_publisher"
            />
        <TextView
            android:id="@+id/tv_setTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/orange"
            android:layout_alignTop="@id/tv_time"
            android:layout_toRightOf="@id/tv_time"/>
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点："
            android:layout_below="@id/tv_publisher"
            android:layout_toRightOf="@id/tv_time"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:id="@+id/tv_setPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1啊实打实大师"
            android:textColor="@color/orange"
            android:layout_alignTop="@id/tv_time"
            android:layout_toRightOf="@id/tv_place"
            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_below="@id/tv_time"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/tv_apply"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_challenge_aplay"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/challengeContent"
        android:onClick="clickApply"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tv_apply_text"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:text="查看报名"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/challengeContent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"/>
</RelativeLayout>
