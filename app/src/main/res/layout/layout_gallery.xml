<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/icon_home_title"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_home_loginmenu"
        android:layout_margin="15dp"
        android:onClick="loginMenu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_home_weather"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    <RadioGroup
        android:id="@+id/rg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_title"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NBA战报"
            android:textSize="20dp"
            android:textColor="@drawable/selector_nba_war_text"
            android:layout_margin="10dp"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全名约球"
            android:textSize="20dp"
            android:button="@null"
            android:textColor="@drawable/selector_nba_war_text"
            android:gravity="center"
            android:layout_margin="10dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/rb_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NBA赛程"
            android:textSize="20dp"
            android:button="@null"
            android:textColor="@drawable/selector_nba_war_text"
            android:gravity="center"
            android:layout_margin="10dp"/>
    </RadioGroup>
    <Gallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_title"
        ></Gallery>
    <TextView
        android:id="@+id/tv_war"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约站列表"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gallery"/>
    <ListView
        android:id="@+id/lv_war"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_war"></ListView>
</RelativeLayout>