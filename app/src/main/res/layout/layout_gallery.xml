<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:src="@color/blackui"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_home_loginmenu"
        android:layout_margin="26px"
        android:onClick="loginMenu"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>
    <ImageView
        android:id="@+id/iv_weather"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_home_weather"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaa"
            android:textColor="@color/orange"
            android:layout_alignBottom="@+id/iv_title"
            android:layout_alignLeft="@+id/iv_weather"
            android:layout_alignStart="@+id/iv_weather" />
    <RadioGroup
        android:id="@+id/rg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_title"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NBA战报"
            android:textSize="20dp"
            android:textColor="@drawable/selector_nba_war_text"
            android:layout_margin="10dp"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/rb_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全名约球"
            android:textSize="20dp"
            android:button="@null"
            android:textColor="@drawable/selector_nba_war_text"
            android:gravity="center"
            android:layout_margin="10dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/rb_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NBA赛程"
            android:textSize="20dp"
            android:button="@null"
            android:textColor="@drawable/selector_nba_war_text"
            android:gravity="center"
            android:layout_margin="10dp"/>
    </RadioGroup>
    <Gallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_title"
        ></Gallery>
        <RadioGroup
            android:id="@+id/markGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/gallery"
            android:layout_centerHorizontal="true">
            <RadioButton
                android:id="@+id/rb_markone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gallery"
                android:button="@null"
                android:checked="true"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/rb_marktwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gallery"
                android:button="@null"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:id="@+id/rb_markthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_gallery"
                android:button="@null"/>
        </RadioGroup>
    <TextView
        android:id="@+id/tv_war"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约站列表"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gallery"/>
    <ListView
        android:id="@+id/lv_war"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/tv_war"></ListView>
</RelativeLayout>