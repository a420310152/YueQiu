<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jhy.org.yueqiu.activity.TrainChallengeActivity">

    <TextView
        android:id="@+id/tv_type"
        android:text="组队对抗赛"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_fromDate"
        android:layout_below="@id/tv_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_fromDate"
        android:text="入场时间"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/et_fromDate"
        android:layout_alignBaseline="@id/et_fromDate"
        android:layout_marginRight="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_place"
        android:layout_below="@id/et_fromDate"
        android:layout_alignRight="@id/et_fromDate"
        android:layout_alignLeft="@id/et_fromDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/tv_place"
        android:text="约战地点"
        android:textSize="18sp"
        android:layout_alignRight="@id/tv_fromDate"
        android:layout_alignBaseline="@id/et_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_toDate"
        android:layout_below="@id/et_place"
        android:layout_alignRight="@id/et_fromDate"
        android:layout_alignLeft="@id/et_fromDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/tv_toDate"
        android:text="离开时间"
        android:textSize="18sp"
        android:layout_alignRight="@id/tv_fromDate"
        android:layout_alignBaseline="@id/et_toDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_title"
        android:layout_below="@id/et_toDate"
        android:layout_alignRight="@id/et_fromDate"
        android:layout_alignLeft="@id/et_fromDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/tv_title"
        android:text="约球宣言"
        android:textSize="18sp"
        android:layout_alignRight="@id/tv_fromDate"
        android:layout_alignBaseline="@id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_content"
        android:layout_below="@id/et_title"
        android:layout_alignRight="@id/et_fromDate"
        android:layout_alignLeft="@id/et_fromDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/tv_content"
        android:text="约球详情"
        android:textSize="18sp"
        android:layout_alignRight="@id/tv_fromDate"
        android:layout_alignBaseline="@id/et_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_publish"
        android:onClick="publish"
        android:text="发布"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
