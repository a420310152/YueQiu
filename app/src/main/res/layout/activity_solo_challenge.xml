<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/container_header"
        android:background="@color/primary"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibtn_finish"
            android:background="@drawable/icon_system_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_type"
            android:text="1V1 比赛"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/container_fromDate"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/icon_edit"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginLeft="-8dp"
        android:layout_below="@id/container_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:text="入场时间"
            android:textSize="18sp"
            android:textColor="@color/darkorange"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fromDate"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_place"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/icon_edit"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginLeft="-8dp"
        android:layout_below="@id/container_fromDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:text="约战地点"
            android:textSize="18sp"
            android:textColor="@color/darkorange"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_place"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_toDate"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/icon_edit"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginLeft="-8dp"
        android:layout_below="@id/container_place"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:text="离开时间"
            android:textSize="18sp"
            android:textColor="@color/darkorange"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_toDate"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_title"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/icon_edit"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginLeft="-8dp"
        android:layout_below="@id/container_toDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:text="约球宣言"
            android:textSize="18sp"
            android:textColor="@color/darkorange"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_title"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_publish"
        android:text="发布"
        android:layout_marginTop="32dp"
        android:layout_below="@id/container_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.jhy.org.yueqiu.test.h.DatetimePickerLayout
        android:id="@+id/my_picker"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
