<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.jhy.org.yueqiu.view.ActionBarLayout
        android:id="@+id/my_action_bar"
        chx:title_text="发现"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/container_first"
        android:paddingTop="16dp"
        android:layout_below="@id/my_action_bar"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_searchPlace"
            android:text="附近球场"
            android:drawableTop="@drawable/icon_map_marker"
            android:drawablePadding="15dp"
            android:layout_toLeftOf="@+id/tv_searchFriend"
            android:layout_alignBottom="@+id/tv_searchFriend"
            android:layout_marginRight="55dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_searchFriend"
            android:text="附近球友"
            android:drawableTop="@drawable/icon_hoop"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_searchSogou"
            android:text="球友论坛"
            android:drawableTop="@drawable/icon_community_sogou"
            android:drawablePadding="10dp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_searchFriend"
            android:layout_alignBottom="@id/tv_searchFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/container_first"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="安全常识"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="运球技巧"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="球场规则"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="软件打分"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
