<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blackui"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="球友资料"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_info_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/icon_system_right"
        android:onClick="myProfileBackClick"
        android:padding="25dp" />

    <ImageView
        android:id="@+id/iv_info_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_info_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_sidebar_head"
        android:onClick="setInfoClick" />

    <TextView
        android:id="@+id/tv_info_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_info_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/selector_myprofile_zan"
        android:drawablePadding="10dp"
        android:onClick="setInfoClick"
        android:padding="10dp"
        android:text="12"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/linear_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_info_zan"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_myprofile_bground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/info_name"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="啊实打实的"
            android:textSize="30dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_info_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_info_name"
        android:layout_marginTop="-5dp"
        android:background="@drawable/icon_myprofile_bground">

        <TextView
            android:id="@+id/tv_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/info_sex"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_info_sex"
            android:text="男"
            android:textSize="34dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_info_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_info_sex"
        android:layout_marginTop="-5dp"
        android:background="@drawable/icon_myprofile_bground">

        <TextView
            android:id="@+id/tv_info_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/info_age"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_info_age"
            android:text="21"
            android:textSize="34dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_info_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relat_info_age"
        android:layout_marginTop="30dp"
        android:background="@drawable/icon_myprofile_bground">

        <TextView
            android:id="@+id/tv_info_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/info_height"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_info_height"
            android:text="175cm"
            android:textSize="34dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_info_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relat_info_height"
        android:layout_marginTop="-5dp"
        android:background="@drawable/icon_myprofile_bground">

        <TextView
            android:id="@+id/tv_info_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/info_weight"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_info_weight"
            android:text="60kg"
            android:textSize="34dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relat_info_skilled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relat_info_weight"
        android:layout_marginTop="-5dp"
        android:background="@drawable/icon_myprofile_bground">

        <TextView
            android:id="@+id/tv_info_skilled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/info_skilled"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_skilled"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_info_skilled"
            android:text="PG"
            android:textSize="34dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relat_info_skilled"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_addFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="加为好友"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="发送消息"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
