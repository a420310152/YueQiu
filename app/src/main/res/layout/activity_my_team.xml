<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blackui"
        android:orientation="horizontal">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/team"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_team_title"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_system_right"
        android:padding="25dp"
        android:background="@null"
        android:onClick="myTeamBackClick"
        android:id="@+id/btn_team_back"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/btn_team_back"
        android:text="基本资料"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_team_logoPicture"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team_logoPicture"
        android:drawableTop="@drawable/icon_sidebar_head"
        android:text="上传Logo"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:id="@+id/tv_team_logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tv_team_logo"
        android:background="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
</RelativeLayout>
