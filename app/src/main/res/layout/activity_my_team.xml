<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blackui"
        android:orientation="horizontal">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/team"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_team_title"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_system_right"
        android:padding="25dp"
        android:background="@null"
        android:onClick="teaminfoClick"
        android:id="@+id/btn_team_back"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableRight="@drawable/icon_myfile_info"
        android:layout_alignParentRight="true"
        android:padding="25dp"
        android:onClick="teaminfoClick"
        android:id="@+id/btn_team_save"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/btn_team_back"
        android:text="基本资料"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_team_logoPicture"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team_logoPicture"
        android:drawableTop="@drawable/icon_sidebar_head"
        android:layout_centerInParent="true"
        android:text="球队Logo"
        android:textSize="15dp"
        android:gravity="center"
        android:onClick="teaminfoClick"
        android:layout_marginTop="15dp"
        android:id="@+id/tv_team_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/tv_team_logo"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:id="@+id/linear_team_name">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="战队名称："
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:id="@+id/tv_team_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_team_logo"
        android:layout_toRightOf="@id/tv_team_name"
        android:background="@null"
        android:text="小分队"
        android:textSize="20sp"
        android:id="@+id/et_team_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="创建时间"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_team_name"
        android:text="战队宣言："
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:id="@+id/tv_team_slogan"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_team_name"
        android:layout_toRightOf="@id/tv_team_slogan"
        android:background="@null"
        android:text="加油！"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/et_team_slogan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_team_slogan"
        android:text="成员介绍"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@color/dimgray"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:id="@+id/tv_team_info"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="添加成员"
        android:layout_below="@id/tv_team_info"
        android:layout_centerInParent="true"
        android:onClick="teaminfoClick"
        android:id="@+id/btn_team_addmemember"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/black"
        android:dividerHeight="1dp"
        android:layout_below="@id/btn_team_addmemember"
        android:id="@+id/lv_team_memember">
    </ListView>
</RelativeLayout>
