<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jhy.org.yueqiu.activity.ResponseChallengeActivity">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:src="@color/blackui" />

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="26px"
        android:onClick="loginMenu"
        android:src="@drawable/icon_home_loginmenu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="消息通知"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_succeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_title"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_launcher" />

    <TextView
        android:id="@+id/tv_succeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_succeed"
        android:layout_centerHorizontal="true"
        android:text="报名成功!"
        android:textColor="@color/orange"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_succeed"
        android:layout_marginLeft="30dp"
        android:text="您已经成功报名参加了由"
        android:textColor="@color/darkgray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_one"
        android:layout_toRightOf="@id/tv_one"
        android:text="123"
        android:textColor="@color/orange"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_toRightOf="@id/tv_name"
        android:text="发起的"
        android:textColor="@color/darkgray"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_two"
        android:layout_toRightOf="@id/tv_two"
        android:text="发起类型"
        android:textColor="@color/lightseagreen"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_two"
        android:layout_marginLeft="30dp"
        android:text="时间是"
        android:textColor="@color/darkgray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_three"
        android:layout_toRightOf="@id/tv_three"
        android:text="00:00"
        android:textColor="@color/lightseagreen"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_time"
        android:layout_toRightOf="@id/tv_time"
        android:text="，地点在"
        android:textColor="@color/darkgray"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_four"
        android:layout_toRightOf="@id/tv_four"
        android:text="某某地点"
        android:textColor="@color/lightseagreen"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_four"
        android:layout_centerHorizontal="true"
        android:text="请您准时赴约哦！"
        android:textColor="@color/darkgray"
        android:textSize="15dp" />

    <RadioButton
        android:id="@+id/rb_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_five"
        android:layout_centerHorizontal="true"
        android:text="提前半个小时提醒我"
        android:textColor="@color/orange"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_helper"
        android:layout_centerHorizontal="true"
        android:background="@color/orange"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="确定返回"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>
