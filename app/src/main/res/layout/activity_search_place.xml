<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jhy.org.yueqiu.view.ActionBarLayout
        android:id="@+id/my_actionBar"
        chx:title_text="附近球场"
        chx:options_src="@drawable/icon_yes"
        chx:options_visible="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_places"
        android:layout_below="@id/my_actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jhy.org.yueqiu.view.BaiduMapLayout
        android:id="@+id/baiduMap"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
