<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/icon_launcher"
        android:id="@+id/iv_team_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球队昵称"
        android:textSize="25dp"
        android:layout_toRightOf="@id/iv_team_logo"
        android:layout_alignTop="@id/iv_team_logo"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_team_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人数:"
        android:textSize="20dp"
        android:layout_toRightOf="@id/iv_team_logo"
        android:layout_below="@id/tv_team_name"
        android:id="@+id/tv_team_number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="建立时间:"
        android:textSize="20dp"
        android:layout_toRightOf="@id/tv_team_number"
        android:layout_below="@id/tv_team_name"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_team_time"/>
</RelativeLayout>
