<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Form">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Form.Control">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="Form.Control.EditText">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:background">@drawable/icon_login_edit</item>
    </style>

    <style name="Form.Control.UserName" parent="Form.Control.EditText">
        <item name="android:drawableLeft">@drawable/icon_login_custom</item>
        <item name="android:hint">邮箱/用户名</item>
    </style>

    <style name="Form.Control.Password" parent="Form.Control.EditText">
        <item name="android:drawableLeft">@drawable/icon_login_password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">密    码</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="Form.Control.Login">
        <item name="android:text">登录</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/icon_login</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
