<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App"></style>

    <style name="App.Nav">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">192dp</item>
    </style>

    <style name="App.Navbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="App.Navbar.Basketball">
        <item name="android:background">@drawable/icon_home_nav</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="App.Navbar.PopupSpan">
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">128dp</item>
    </style>

    <style name="App.Navbar.Item">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.Navbar.Item.Contact">
        <item name="android:drawableTop">@drawable/icon_home_contact</item>
        <item name="android:text">通讯</item>
    </style>

    <style name="App.Navbar.Item.Search">
        <item name="android:drawableTop">@drawable/icon_home_search</item>
        <item name="android:text">发现</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="App.Banner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
    </style>
    <style name="App.ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
